<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/file_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_5"
        android:maxLines="3"
        android:textColor="@color/black"
        android:textSize="@dimen/font_14"
        tools:text="File Name" />

    <TextView
        android:id="@+id/file_path"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/file_name"
        android:layout_alignEnd="@id/content"
        android:layout_marginTop="@dimen/dp_8"
        android:maxLines="3"
        android:textColor="@color/color_font_gray"
        android:textSize="@dimen/font_12"
        tools:text="File Path" />

    <TextView
        android:id="@+id/file_url"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/file_path"
        android:layout_alignEnd="@id/content"
        android:layout_marginTop="@dimen/dp_8"
        android:maxLines="3"
        android:textColor="@color/color_font_black"
        android:textSize="@dimen/font_12"
        tools:text="File Url" />

    <RelativeLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/file_url"
        android:layout_marginStart="0dp"
        android:layout_marginTop="@dimen/dp_8"
        android:layout_marginEnd="0dp"
        android:layout_toStartOf="@id/del_bt">

        <TextView
            android:id="@+id/speed_or_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:textColor="@color/color_font_gray"
            android:textSize="@dimen/font_12"
            tools:text="Speed Or State" />

        <TextView
            android:id="@+id/left_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/speed_or_state"
            android:layout_marginStart="@dimen/dp_8"
            android:layout_toEndOf="@id/speed_or_state"
            android:textColor="@color/color_font_gray"
            android:textSize="@dimen/font_12"
            tools:text="Left Time" />

        <TextView
            android:id="@+id/file_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/speed_or_state"
            android:layout_alignParentEnd="true"
            android:text="-/-"
            android:textSize="@dimen/font_11"
            tools:ignore="RelativeOverlap" />

        <com.zy.client.download.HorizontalProgressBarWithNumber
            android:id="@+id/pb"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_20"
            android:layout_below="@id/speed_or_state"
            android:layout_alignParentStart="true"
            android:layout_marginTop="@dimen/dp_8"
            android:max="100" />

    </RelativeLayout>

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/del_bt"
        style="?imageButtonStyle"
        android:layout_width="@dimen/dp_15"
        android:layout_height="@dimen/dp_15"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/dp_8"
        android:layout_marginEnd="@dimen/dp_8"
        android:layout_toStartOf="@id/handle_bt"
        android:background="@color/transparent"
        android:clickable="true"
        android:focusable="true"
        app:srcCompat="@drawable/ic_video_delete" />

    <Button
        android:id="@+id/handle_bt"
        style="?buttonStyleSmall"
        android:layout_width="@dimen/dp_65"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:text="@string/start"
        android:textColor="@color/white"
        android:textSize="@dimen/font_14" />

</RelativeLayout>