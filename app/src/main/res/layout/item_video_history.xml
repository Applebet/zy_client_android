<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_player_white"
    android:minHeight="@dimen/dp_45"
    android:paddingStart="@dimen/dp_15"
    android:paddingTop="@dimen/dp_10"
    android:paddingBottom="@dimen/dp_10"
    android:paddingEnd="@dimen/dp_15">

    <TextView
        android:id="@+id/tv_history"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/normalFontColor"
        android:textSize="@dimen/font_14"
        app:layout_constraintVertical_bias="0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/tv_history_url"
        tools:text="XXXXXXX" />

    <TextView
        android:id="@+id/tv_history_url"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintVertical_bias="1"
        android:textColor="@color/normalFontColor"
        android:textSize="@dimen/font_12"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@id/tv_history_url"
        app:layout_constraintTop_toBottomOf="@id/tv_history_url"
        tools:text="XXXXXXX" />

    <TextView
        android:id="@+id/tv_history_source"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/normalFontColor"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5"
        android:textSize="@dimen/font_12"
        app:layout_constraintBottom_toBottomOf="parent"
       app:layout_constraintRight_toRightOf="parent"
        tools:text="XXXXXXX" />

</androidx.constraintlayout.widget.ConstraintLayout>