<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorContainerBg"
    android:orientation="vertical">

    <com.wuhenzhizao.titlebar.widget.CommonTitleBar
        android:id="@id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible"
        app:centerType="textView"
        app:leftDrawablePadding="@dimen/dp_3"
        app:leftType="imageButton"
        app:rightImageResource="@drawable/ic_history_delete"
        app:rightType="imageButton" />

    <com.zy.client.views.loader.LoaderLayout
        android:id="@id/statusView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:state="loading">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_video_history"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:overScrollMode="ifContentScrolls"
            android:scrollbars="vertical" />

    </com.zy.client.views.loader.LoaderLayout>

</LinearLayout>